@inject IJSRuntime JSRuntime

<dialog @ref="dialog">
  <article>
    <h2>Add Server</h2>
    
    <form>
        <label>
            Server Name
            <input name="ServerName" placeholder="Server Name" type="text" />
        </label>
        
        <label>
            Hostname or IP Address
            <input name="HostnameOrIPAddress" placeholder="test.lan or 192.168.1.1" type="text" />
        </label>
        
        <label>
            Mac Address
            <input name="MacAddress" placeholder="00:00:00:00:00:00" type="text" />
        </label>
    </form>
    
    <footer>
      <button class="secondary">
        Cancel
      </button>
      <button>Confirm</button>
    </footer>
  </article>
</dialog>

@code {
    private ElementReference dialog { get; set; }

    private void OpenDialog() {
        JSRuntime.InvokeVoidAsync("openDialog", dialog);
    }
}